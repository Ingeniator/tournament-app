{
  "name": "padel-tournament",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm -w @padel/runner run dev",
    "build": "npm -w @padel/runner run build",
    "build:all": "npm -w @padel/runner run build && npm -w @padel/planner run build",
    "lint": "eslint .",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui",
    "e2e:update-snapshots": "npx playwright test --update-snapshots"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4"
  }
}
